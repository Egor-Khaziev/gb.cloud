<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0"
      xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Client.Panel.ControllerMainPanel">

   <HBox>
      <MenuBar>
      <Menu text="Файл">
         <MenuItem onAction="#btnExitAction" text="Выйти из программы" />
      </Menu>
         <Menu text="Справка">
            <MenuItem onAction="#btnAboutAction" text="О программе" />
         </Menu>
   </MenuBar>
   </HBox>


<HBox maxWidth="Infinity">
      <HBox alignment="CENTER" maxWidth="Infinity" HBox.hgrow="ALWAYS">
      <Label maxWidth="Infinity" text="Your files"  />
      </HBox>

      <HBox alignment="CENTER" maxWidth="Infinity" HBox.hgrow="ALWAYS">
      <Label maxWidth="Infinity" text="Server files"  />
      </HBox>
</HBox>

   <HBox VBox.vgrow="ALWAYS">
      <fx:include fx:id="ClientPanel" source="PCPanel.fxml" HBox.hgrow="ALWAYS" />
      <fx:include fx:id="ServerPanel" source="ServerPanel.fxml" HBox.hgrow="ALWAYS" />
   </HBox>


   <HBox layoutX="36.0" layoutY="388.0" maxWidth="Infinity" prefHeight="35.0" prefWidth="534.0" spacing="10.0" AnchorPane.bottomAnchor="0.8000000000000114" AnchorPane.rightAnchor="66.0">
      <Button focusTraversable="false" maxWidth="Infinity" onAction="#copyBtnAction" text="Копировать файл" HBox.hgrow="ALWAYS" />
      <Button focusTraversable="false" maxWidth="Infinity" text="Переместить файл" HBox.hgrow="ALWAYS" />
      <Button focusTraversable="false" maxWidth="Infinity" text="Удалить файл" HBox.hgrow="ALWAYS" />
      <Button focusTraversable="false" maxWidth="Infinity" onAction="#btnExitAction" text="Выход из программы" HBox.hgrow="ALWAYS" />
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
   </HBox>
</VBox>
